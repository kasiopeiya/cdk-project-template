{
  "name": "infra-repo",
  "version": "0.1.15",
  "bin": {
    "infra-repo": "bin/infra-repo.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "test:fga": "jest ./*/fineGrained.test.ts --passWithNoTests",
    "test:snap": "jest ./*/snapshot.test.ts --passWithNoTests",
    "cdk": "cdk",
    "prepare": "husky",
    "format": "prettier --write '*/**/*.ts'",
    "format:ci": "prettier --check '*/**/*.ts'",
    "lint": "eslint '*/**/*.ts' --max-warnings 0 --fix",
    "lint:ci": "eslint '*/**/*.ts' --max-warnings 0",
    "lint-fix": "prettier --write '*/**/*.ts' && eslint '*/**/*.ts' --max-warnings 0",
    "md-lint-fix": "prettier --write '*/**/*.md' && markdownlint-cli2 '*/**/*.md'",
    "release": "git pull && standard-version && git push && git push --follow-tags",
    "depcheck": "depcheck"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@types/jest": "^29.5.13",
    "@types/node": "20.12.4",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "eslint": "^8.57.1",
    "aws-cdk": "2.159.1",
    "depcheck": "^1.4.7",
    "esbuild": "^0.24.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.6.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.8",
    "markdownlint-cli2": "^0.14.0",
    "prettier": "^3.2.5",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "~5.4.5",
    "winston": "^3.13.0"
  },
  "dependencies": {
    "aws-cdk-lib": "2.135.0",
    "cdk-nag": "^2.28.103",
    "constructs": "^10.3.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --max-warnings 0 --fix"
    ],
    "*.md": [
      "prettier --write",
      "markdownlint-cli2"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
