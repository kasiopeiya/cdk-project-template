{
  "name": "infra-repo",
  "version": "0.1.0",
  "bin": {
    "infra-repo": "bin/infra-repo.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "test:fga": "jest ./test/**/fineGrained.test.ts",
    "test:snap": "jest ./test/**/snapshot.test.ts",
    "cdk": "cdk",
    "prepare": "husky install",
    "format": "prettier --write '*/**/*.ts'",
    "lint": "eslint '*/**/*.ts' --max-warnings 0 --fix",
    "lint-fix": "prettier --write '*/**/*.ts' && eslint '*/**/*.ts' --max-warnings 0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "20.11.19",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "aws-cdk": "2.128.0",
    "esbuild": "^0.20.2",
    "eslint": "^8.56.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "~5.3.3",
    "winston": "^3.12.0"
  },
  "dependencies": {
    "aws-cdk-lib": "2.128.0",
    "cdk-nag": "^2.28.69",
    "constructs": "^10.3.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": "npm run lint-fix && npm run test:snap"
  }
}
